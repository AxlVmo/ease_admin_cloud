@page
@model ForgotPasswordModel

<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="/template/assets/images/logo.png" height="54" alt="EAC" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Recuperar
                    contraseña</h2>
            </div>
            <div class="panel-body">
                <div class="alert alert-info">
                    <p class="m-none text-weight-semibold h6">¡Ingrese su correo electrónico a continuación y le
                        enviaremos instrucciones de reinicio!</p>
                </div>
                <form method="post">
                    <div class="form-group mb-none">
                        <div class="input-group">
                              <input type="text" class="form-control input-lg" asp-for="Input.Email" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary btn-lg" type="submit">¡Reiniciar!</button>
                            </span>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <p class="text-center mt-lg">¿Recordada? <a asp-area="Identity" asp-page="/Account/Login">¡Iniciar
                            sesión!</a></p>
                </form>
            </div>
        </div>

        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2023. Todos los derechos reservados.</p>
    </div>
</section>
<!-- end: page -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
