@page
@model RegisterModel

<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="/template/assets/images/logo.png" height="54" alt="logo_registro" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i>Registrarse
                </h2>
            </div>
            <div class="panel-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="form-group mb-lg">
                        <label asp-for="Input.Email">Nombre de usuario</label>
                        <div class="input-group input-group-icon">
                            <input type="text" class="form-control input-lg" asp-for="Input.Email" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa-regular fa-user"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-none">
                        <div class="row">
                            <div class="col-sm-6 mb-lg">
                                <div class="form-group mb-lg">
                                    <div class="clearfix">
                                        <label class="pull-left" asp-for="Input.Password">Contraseña</label>
                                    </div>
                                    <div class="input-group input-group-icon">
                                        <input type="password" class="form-control input-lg" asp-for="Input.Password" />
                                        <span class="input-group-addon">
                                            <span class="icon icon-lg">
                                                <i class="fa-solid fa-key"></i>
                                            </span>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-lg">
                                <div class="form-group mb-lg">
                                    <div class="clearfix">
                                        <label class="pull-left" asp-for="Input.ConfirmPassword">Contraseña</label>
                                    </div>
                                    <div class="input-group input-group-icon">
                                        <input type="password" class="form-control input-lg"
                                            asp-for="Input.ConfirmPassword" />
                                        <span class="input-group-addon">
                                            <span class="icon icon-lg">
                                                <i class="fa-solid fa-key"></i>
                                            </span>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="checkbox-custom checkbox-default">
                                <input id="AgreeTerms" type="checkbox" asp-for="Input.terms_use" />
                                <label>Estoy de acuerdo con los <a href="#">términos de uso</a></label>
                            </div>
                        </div>
                        <div class="col-sm-4 text-right">
                            <button id="registerSubmit" type="submit"
                                class="btn btn-primary hidden-xs">Registrar</button>
                            <button id="registerSubmit_xs" type="submit"
                                class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Registrar</button>
                        </div>
                    </div>
                    <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                        <span>o</span>
                    </span>
                    <p class="text-center">¿Ya tienes una cuenta? <a asp-area="Identity"
                            asp-page="/Account/Login">¡Iniciar sesión!</a></p>
                </form>
            </div>
        </div>
        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2023. Todos los derechos reservados.</p>
    </div>
</section>
<!-- end: page -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
