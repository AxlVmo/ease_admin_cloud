@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model ease_admin_cloud.Areas.Catalogs.Models.cat_departamento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <section class="panel">
                <header class="panel-heading">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Catálogos Empresas / </span>Crear
                        Área</h4>
                </header>
                <div class="panel-body">
                     <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.departamento_desc)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.departamento_desc)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.id_usuario_modifico)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.id_usuario_modifico)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.fecha_registro)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.fecha_registro)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.id_estatus_registro)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.id_estatus_registro)
                        </dd>
                    </dl>
                </div>
                <footer class="panel-footer">
                    <a asp-action="Index" class="btn btn-primary">Regresar</a>
                </footer>
            </section>
        </form>
    </div>
</div>