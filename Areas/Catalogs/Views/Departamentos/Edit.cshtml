@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model ease_admin_cloud.Areas.Catalogs.Models.cat_departamento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
         
            <input type="hidden" asp-for="id_departamento" />
            <section class="panel">
                <header class="panel-heading">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Catálogos Empresas / </span>Editar
                        Área</h4>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="departamento_desc"></label>
                        <div class="col-md-6">
                            <div class="input-group input-group-icon">
                                <input type="text" class="form-control" placeholder="Área" asp-for="departamento_desc">
                                <span class="input-group-addon">
                                    <span class="icon"><i class="fa-solid fa-briefcase"></i></span>
                                </span>
                            </div>
                           <span asp-validation-for="departamento_desc" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="id_estatus_registro"></label>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select class="form-control mb-md" required asp-for="id_estatus_registro"
                                    asp-items="@(new SelectList(ViewBag.ListaCatEstatus,"id_estatus","estatus_desc"))">
                                    <option value="">SELECCIONAR</option>
                                </select>
                            </div>
                            <span asp-validation-for="id_estatus_registro" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <input type="submit" value="Editar" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-primary">Regresar</a>
                </footer>
            </section>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
